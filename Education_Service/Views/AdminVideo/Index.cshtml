@*Header code*@
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white me-2">
                <i class="mdi mdi-home"></i>
            </span>
        </h3>
        <a id="addnewvideo" href='@Url.Action("addvideo", "AdminVideo", new { Cid = ViewBag.idd })' class="btn btn-block btn-lg btn-gradient-primary mt-4y"> Add New Video</a>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center"> @ViewBag.CourseName</h1>
                    <p class="card-description text-center">
                        @ViewBag.CourseDecription
                    </p>

                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.VideoTitle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.VideoLink)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in (List<tblCourseVideo>)ViewBag.Allvideo)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.VideoTitle)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VideoLink)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "AddVideo", new { id = item.id, Cid = item.CourseId }) |

                                        @Html.ActionLink("Delete", "Delete", new { id = item.id, Cid = item.CourseId }, new { onclick = "return confirm('Are you sure you want to delete this ?');" })

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>

    </div>
</div>









@*popupModel*@

<div class="modal" id="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Video</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">


                    <div class="grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body border-1">
                                <h4 class="card-title text-center">Add New Video</h4>
                                <p class="card-description text-center"> Basic form layout </p>
                                <form class="forms-sample">

                                    <div class="form-group">
                                        <label for="exampleInputUsername1">Video Name</label>
                                        <input type="text" class="form-control" id="exampleInputUsername1" placeholder="Enter video title">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Video Link</label>
                                        <input type="email" class="form-control" id="" placeholder="Enter Full Video Link">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Short Description</label>
                                        <input type="password" class="form-control" id="" placeholder=" Enter short description">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputConfirmPassword1">Duration of video</label>
                                        <input type="password" class="form-control" id="exampleInputConfirmPassword1" placeholder="Enter duration of video">
                                    </div>

                                    <button type="submit" class="btn btn-gradient-primary me-2">Save</button>
                                    <button type="button" class="btn btn-secondary " data-dismiss="modal">Close</button>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>