                    <!-- Add right button for "Start Course" -->
                    <a href="/uservideo/allvideo" class="course_button right_button">Start Course</a>
                    
                </div>
            </div>
        </li>

        <li class="cards1_item">
            <div class="card">
                <div class="card_image"><img src="https://www.pcilearning.com/wp-content/uploads/2019/12/full_stack_web_2.jpg" alt="mixed vegetable salad in a mason jar. "></div>
                <div class="card_content">


