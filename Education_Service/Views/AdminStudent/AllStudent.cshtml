@model Education_Service.tblStudentData
@{
    ViewBag.Title = "AllStudent";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@{
    var sId = 0;
    if (Model != null)
    {
        sId = Model.id;
    }

}
<script>
    $(document).ready(function () {
        $("#tblstud").DataTable();

        var studentId="@sId"
        if (studentId > 0) {
        $("#myModal").show();
        }

        $("[data-bs-dismiss='modal']").click(function () {
            $("#myModal").show();
        });
    });

</script>
<h2>AllStudent</h2>

<p>
    @Html.ActionLink("Create New", "AddStudent")

