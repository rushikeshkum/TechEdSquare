@model Education_Service.tblStudentData

@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnSave").click(function () {
            // call ajax
            var obj =
            {

                "StudentName": $("#StudentName").val(),
                "StudentMobileNo": $("#StudentMobileNo").val(),
                "StudentMailId": $("#StudentMailId").val(),
                "StudentDOB": $("#StudentDOB").val(),
                "StudentPAN": $("#StudentPAN").val(),
                "StudentAddress": $("#StudentAddress").val(),
                "SubscribedCourseId": $("#SubscribedCourseId").val(),
                "StudentLoginPassword": $("#StudentLoginPassword").val(),
                "StudentStatus": $("#StudentStatus").val()
            };

            $.ajax
                ({
                    "url": "/API/SaveStudents",
                    "method": "post",
                    "contentType": "application/json",
                    "data": JSON.stringify(obj),
                    success: function (data) {
                        // console.log(data);

                        if (data.Code == 0) {
                            alert(data.Message);
                            Loaddata();
                        }
                    },
                    error: function (error) {
                        console.log(error);
                    }
                });

        });

    });
</script>

